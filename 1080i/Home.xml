<window id="0">
	<defaultcontrol always="true">9000</defaultcontrol>
	<allowoverlay>yes</allowoverlay>
	<!--<onload>PlayerControl(stop)</onload>-->
	<animation effect="fade" start="100" end="0" time="300">WindowClose</animation>
	<animation effect="fade" start="0" end="100" time="1000" reversible="true">WindowOpen</animation>
		
	<controls>
		
		<include>globalBackground</include>
		<include>fanartSlides</include>
																							
		<!--Date / time and weather-->
		<control type="group">
			<posx>col-1-begin</posx>
			<posy>row-14-begin</posy>
			
			<animation effect="slide" start="0,200" delay="1000" tween="sine" time="300">WindowOpen</animation>

			<control type="label">
				<posx>0</posx>
				<posy>12</posy>
				<width>24-col</width>
				<font>veryLarge</font>
				<align>center</align>
				<textcolor>selected</textcolor>
				<label>$INFO[System.Time]</label>
			</control>

			<control type="label">
				<posx>0</posx>
				<posy>2-row</posy>
				<width>24-col</width>
				<align>center</align>
				<font>Large</font>
				<textcolor>selected</textcolor>
				<label>$INFO[System.Date(DDD)] [B]$INFO[System.Date(dd)][/B] $INFO[System.Date(MMM)]</label>
			</control>
			
			<control type="label">
				<!--<visible>!IsEmpty(Weather.location)</visible>-->
				<posx>0</posx>
				<posy>3-row</posy>
				<width>24-col</width>
				<align>center</align>
				<font>regular</font>
				<textcolor>selected</textcolor>
				<label>$INFO[Weather.Location] [B]$INFO[Weather.Temperature][/B] [LOWERCASE]$INFO[Weather.conditions][/LOWERCASE]</label>
			</control>
			
			<!--system info indicator-->
			<control type="label">
				<posx>9-col</posx>
				<posy>4-row</posy>
				<width min="30" max="200">auto</width>
				<font>symbol</font>
				<textcolor>white</textcolor>
				<label></label>
			</control>

			<control type="label">
				<posx>13-col</posx>
				<posy>4-row</posy>
				<width min="30" max="200">auto</width>
				<font>symbol</font>
				<textcolor>white</textcolor>
				<label></label>
			</control>
			
			<control type="label">
				<posx>9-col</posx>
				<posy>4-row</posy>
				<width>24-col</width>
				<align>left</align>
				<font>smallMedium</font>
				<textcolor>white</textcolor>
				<label>     SYSTEM INFO</label>
			</control>

			<control type="label">
				<posx>13-col</posx>
				<posy>4-row</posy>
				<width>24-col</width>
				<align>left</align>
				<font>smallMedium</font>
				<textcolor>white</textcolor>
				<label>     WEATHER</label>
			</control>
							
		</control>
										
		<!--browse controls-->
		<control type="group">
			<posx>col-6-begin</posx>
			<posy>row-8-begin</posy>
			
			<!--animations-->
			<animation effect="fade" start="0" end="100" delay="500" time="600">WindowOpen</animation>
								
			<control type="list" id="9000">
				<posx>0</posx>
				<posy>0</posy>
				<width>24-col</width>
				<height>3-col</height>
				<orientation>horizontal</orientation>
				<onup>ActivateWindow(systeminfo)</onup>	
				<ondown>ActivateWindow(weather)</ondown>

				<itemlayout width="3-col" height="3-col">

					<control type="image">
						<posx>0</posx>
						<posy>0</posy>
						<width>2-col</width>
						<height>2-col</height>
						<aspectratio scalediffuse="false">scale</aspectratio>
						<texture diffuse="masks/circle.png" border="0">colors/black.png</texture>
						<bordersize>0</bordersize>
						<colordiffuse>99FFFFFF</colordiffuse>
					</control>
					
					<control type="label">
						<posx>25</posx>
						<posy>-38</posy>
						<width>3-col</width>
						<height>3-col</height>
						<font>symbolVeryLarge</font>
						<textcolor>white</textcolor>
						<shadowcolor>-</shadowcolor>
						<label>$INFO[ListItem.label2]</label>
					</control>
					
				</itemlayout>

				<focusedlayout width="3-col" height="3-col">

					<control type="image">
						<posx>0</posx>
						<posy>0</posy>
						<width>2-col</width>
						<height>2-col</height>
						<aspectratio scalediffuse="false">scale</aspectratio>
						<texture diffuse="masks/circle.png" border="0">colors/white.png</texture>
						<bordersize>0</bordersize>
						<colordiffuse>ccFFFFFF</colordiffuse>
					</control>
					
					<control type="label">
						<posx>25</posx>
						<posy>-38</posy>
						<width>3-col</width>
						<height>3-col</height>
						<font>symbolVeryLarge</font>
						<textcolor>black</textcolor>
						<shadowcolor>-</shadowcolor>
						<label>$INFO[ListItem.label2]</label>
					</control>
									
				</focusedlayout>
			
				<content>
					<item>
						<label>31000</label>
						<label2></label2>
						<thumb>-</thumb>
						<onclick>ActivateWindow(videolibrary)</onclick>
						<onclick>Skin.SetString(showRecentVideoItems,true)</onclick>
					</item>
					<item>
						<label>31001</label>
						<label2></label2>
						<thumb>-</thumb>
						<onclick>ActivateWindow(musiclibrary)</onclick>
						<onclick>Skin.SetString(showRecentMusicItems,true)</onclick>
					</item>
					<item>
						<label>31002</label>
						<label2></label2>
						<thumb>-</thumb>
						<onclick>ActivateWindow(pictures)</onclick>
					</item>
					<item>
						<label>5</label>
						<label2></label2>
						<thumb>-</thumb>
						<onclick>ActivateWindow(settings)</onclick>
					</item>
					<item>
						<label>31004</label>
						<label2></label2>
						<thumb>-</thumb>
						<onclick>ActivateWindow(ShutdownMenu)</onclick>
					</item>
				</content>

			</control>
		</control>
																		
		<!--debugging-->
		<include>Debug_Grid</include>
		<control type="label">
			<include>WindowID</include>
			<label>Home.xml</label>
		</control>

	</controls>

</window>