					<posy>0</posy>
					<width>6-col-gutter</width>
					<font>itemTitle</font>
					<textcolor>black</textcolor>
					<selectedcolor>black</selectedcolor>
					<shadowcolor>-</shadowcolor>
					<label>$INFO[ListItem.Label]</label>
				</control>
								
				<control type="label">
					<posx>684</posx>
					<posy>0</posy>
					<width>4-col</width>
					<align>right</align>
